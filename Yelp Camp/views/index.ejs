
<%- include("partial/header") %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelp Camp ayy!</h1>
            <p>You'll find the best camps from all over the world below! :)</p>
            <a href="/campgrounds/new" class="btn btn-primary">Add a new Campground?</a>
        </div>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                
                <div class="card" style = "width: 18rem; height: 18rem; margin: 20px; padding: 20px;">
                    <img src="<%= campground.image %>">
                    <div class="card-text">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href=" /campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
             
            </div>
        <% }); %>
    </div>
   
    
</div>
<%- include("partial/footer") %>