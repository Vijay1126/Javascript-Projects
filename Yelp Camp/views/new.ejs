<%- include("partial/header")%>
    
<div class="container">
    <!-- <div class="row"> -->
        <h1 style="text-align: center;">Add a new campground</h1>
        <div style="width: 40%; margin: 30px auto;" >
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class = "form-control" type="text" name = "name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class = "form-control" type="text" name = "image" placeholder="URL of Image">
                </div>
                <div class="form-group">
                    <input class = "form-control" type="text" name = "description" placeholder="Description of the image">
                </div>
                <div class="form-group">
                    <button class = "btn btn-primary btn-lg" >Submit!</button>
                </div>
                

            </form>
    
            <a href="/campgrounds">Go back?</a>
        </div>
        
